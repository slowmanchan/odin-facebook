<div class="jumbotron text-center background-tint user-form">
  <div class="container-fluid">
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



  <div class="field form-input">
    <%= f.hidden_field :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email"%>
  </div>
   <br />
  <div class="field form-input">
    <%= f.hidden_field :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password"%>
    <br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field form-input">
    <%= f.hidden_field :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password" %>
  </div>

  <div class="actions form-input">
    <%= f.submit "Sign up", class: "btn btn-default btn-md"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
